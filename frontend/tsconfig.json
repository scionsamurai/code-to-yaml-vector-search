{
    // added per setup instructions for SvelteKit + TypeScript + Vite
  "compilerOptions": {
    "outDir": "../static",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["svelte", "vite/client"],
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src/**/*.ts", "src/**/*.svelte", "src/main.ts"],
  "exclude": ["node_modules", "dist"]
}